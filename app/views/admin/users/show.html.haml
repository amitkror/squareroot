  .columns.small-12.medium-6
    .key-value
      .key First Name
      .value= @user.first_name

    .key-value
      .key Last Name
      .value= @user.last_name

    .key-value
      .key Email
      .value= @user.email

    .key-value
      .key Age
      .value= @user.age