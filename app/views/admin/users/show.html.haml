.row
  .columns.small-12
    %h2= @user.first_name + @user.last_name

    .key-value
      .key Actions
      .value
        /= link_to 'Edit', edit_admin_team_member_path(@team_member), :class => 'button tiny radius info'
        /= link_to 'Delete', admin_team_member_path(@team_member), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button tiny radius info'

